<!doctype html>
<!-- Project Page -->
<html>
<head>
	<title>Come Together</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
	
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	
	<!-- import custom CSS modules -->
	<link href="/css/comeTogether.css" rel="stylesheet">
	<link href="/css/textFonts.css" rel="stylesheet">
</head>

<body>
	<!-- load header -->
	<div id="header"></div>

	<div class="container">		
		<div class="project">
			<h2>{{projectName}}</h2>
			&nbsp;
			<img src="{{projectImgUrl}}" class="img-responsive img-rounded">
			<p style="margin-bottom:20px;"/></p>
			
			{{#if validProj}}
				<div class="progress">
					<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}">{{progress}}</div>
				</div>
				<p style="margin-bottom:20px;"/></p>
			{{/if}}

			<p class="projectDesc">{{projectDesc}}</p>
			&nbsp;

			{{#if validProj}}
				<h4><strong>Organizer:</strong></h4><p>{{organizer}}</p>
				&nbsp;
				<h4><strong>Contact:</strong></h4><p>{{contact}}</p>
				&nbsp;
				<h4><strong>Types of People Needed:</strong></h4><p>{{peopleNeeded}}</p>
				&nbsp;
				<h4><strong>Meeting Time:</strong></h4><p>{{meetingTime}}</p>
				&nbsp;
				<h4><strong>Meeting Location:</strong></h4><p>{{meetingLocation}}</p>
			{{/if}}

			<hr>
		</div>

		{{#if showJoinBtn}}
			<div id="btn-join">
				<a href="/confirmation">
	      		<input id="submit" class="standardText" type="button" value="Join Project!">
	      		</a>
	    	</div>
    	{{/if}}
		<div id="btn-back"> <a href="/home" class="standardText">&laquo; Back</a></div>
	</div>

	<!-- load footer -->
	<div id="footer"></div>

	<!-- load JS scripts -->
	<script src="/js/jquery-3.1.1.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/comeTogether.js"></script>
	<!-- load header and footer using scripts-->
	<script> $(function() {$("#header").load("/header.html")} ); </script>
	<script> $(function() {$("#footer").load("/footer.html")} ); </script>
</body>
</html>